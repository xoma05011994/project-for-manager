    <div id = "content" >
      <table class = "table table-bordered title"><tr class='info'><td class = "title"><h2>Clients</h2></td></tr></table>
      <table class = "table table-bordered mytable">
        <tr id = "lable_tr" class='success' >
          <td>Last name</td>
          <td>Name</td>
          <td>Email</td>
          <td>Projects</td>
          <td>Actions</td>
          <td width = "50" style = "text-align: right; vertical-align: bottom;">
          <%= link_to "Add", new_client_path %>
          </td>

        </tr>
        <% unless @clients.nil? %>
          <% @clients.each do |client| %>
            <tr class = "client_id" client-id = "<%= client.id.to_s %>" >
              <td> <%= client.last_name %> </td>              
              <td> <%= client.first_name %> </td>
              <td> <%= client.email %> </td>
              <td> 
                <% client.projects.each do |project| %>
                <%= project.name + ";" %> 
                <% end %>
              </td>
              <td style = "text-align: center; vertical-align: middle; overflow:visible;">
                <div class="btn-group">
             <a class="btn btn-inverse dropdown-toggle" data-toggle="dropdown" href="#">
              Action
             <span class="caret"></span>
             </a>
        
            <ul class="dropdown-menu">
              <li><%= link_to 'Show', action: :show, id: client.id %></li>
                <li><%= link_to 'Edit', action: :edit, id: client.id %></li>
                <li><%= link_to 'Delete', { action: :destroy, id: client.id },
                     method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
        </div>
              </td>
              <td>
              </td>
            </tr>
          <% end %>
        <% end %>
      </table>
    </div>

