      <div class="title"> 
      	<h2>Projects</h2>
      </div>

      <table class = "table table-bordered mytable">
        <tr id = "lable_tr" class='success' >
          <td>Project name</td>
          <td>Client</td>
          <td>Programmer</td>
          <td>Manager</td>
          <td width="100">Status</td>
          <td>Date of Start</td>
          <td>Deadline</td>
          <td>Totally</td>
          <td>Currency</td>
          <td>Paid</td>
          <td>To pay</td>
          <td>Comment</td>
          
          <td width = "50" rowspan="<% unless @projects_all.nil? %><%= @projects_all.length + 1 %><% end %>" style = "text-align: right; vertical-align: bottom;">
          <!--<a id="a_Add" role="button" class="btn">Add</a>-->
          <%= link_to 'Add', new_project_path , :class => "btn"  %>
          </td>
        </tr>

        <% @projects_all.each do |project| %>
  		<tr>
    	<td><%= project.name %></td>
    	<% unless project.client.try(:last_name).nil? %>
        	<td> 
        		<%= project.client.last_name %> 
        	</td>
        <% else %>
        	<td 
        		style="color: red;">Removed
        	</td>
        <% end %>
        <td class = "td_programmers" > 
                <% project.programmers.each do |programmer| %> 
                  <%= programmer.last_name + ";" %>
                <% end %>
         </td>

    	<% unless project.manager.try(:last_name).nil? %>
        	<td> <%= project.manager.last_name %> </td>
        <% else %>
            <td style="color: red;" >Removed</td>
        <% end %>
        <td> <%= project.status%> </td>
        <td> <%= project.date_of_start %> </td>
        <td> <%= project.deadline %> </td>
        <td> <%= project.totally %> </td>
        <td> <%= project.currency %> </td>
        <td> <%= project.paid %> </td>
        <td> <%= project.to_pay %> </td>
    	<td style="overflow:visible">
      		<div class="btn-group">
       			 <a class="btn btn-inverse dropdown-toggle" data-toggle="dropdown" href="#">
          		Action
         		 <span class="caret"></span>
       			 </a>
        
       			<ul class="dropdown-menu">
         			<!--<li><%= link_to 'Show', action: :show, id: project.id %></li>-->
          			<li><%= link_to 'Edit', action: :edit, id: project.id %></li>
          			<li><%= link_to 'Destroy', { action: :destroy, id: project.id },
                   	 method: :delete, data: { confirm: 'Are you sure?' } %></li>
        		</ul>
     		</div>
 		</tr>
		<% end %>
		</table>
